<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.edu.uade.scrumgame">

    <application
        android:name=".presentation.ScrumApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.view.activity.SplashScreen"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.view.activity.LoginActivity" />
        <activity android:name=".presentation.view.activity.MenuActivity" />
        <activity
            android:name=".presentation.view.activity.LevelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.view.activity.InfoTheoryActivity"
            android:configChanges="screenLayout|orientation|screenSize" />
        <activity android:name=".presentation.view.activity.InfoGameActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>