<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="false"
            android:layout_weight="1"
            android:background="@drawable/starfield"
            android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:text="@string/velocity_game_results_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_rounded_bold"
                android:textSize="24sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:baselineAligned="false">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:layout_margin="10dp" android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/expectedScoreDescriptionTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="center"
                        android:text="@string/velocity_game_expected_score_description"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gotham_rounded_medium"
                        android:textSize="18sp"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/expectedScoreTv"
                        android:background="@color/estimation_red"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="top"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gotham_rounded_bold"
                        android:textSize="24sp"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp" android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/scoreDescriptionTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="center"
                        android:text="@string/velocity_game_score_description"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gotham_rounded_medium"
                        android:textSize="18sp"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/scoreTv"
                        android:background="@color/estimation_green"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="top"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gotham_rounded_bold"
                        android:textSize="24sp"
                />
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/resultsDescriptionTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_rounded_book"
                android:textSize="20sp"
                android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/explanationTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_rounded_book"
                android:textSize="20sp"
                android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" android:text="@string/velocity_game_results_description"/>
        <Button
                android:text="@string/continue_text"
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:foregroundGravity="bottom"
                android:textColor="@color/white" android:textSize="20sp"
                android:fontFamily="@font/gotham_rounded_bold" android:textAllCaps="false"
                android:background="@color/transparent"/>

    </LinearLayout>
</ScrollView>