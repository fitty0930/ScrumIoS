<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_choices_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
                android:id="@+id/rb_choice_2"
                style="@style/androidx.appcompat.widget.AppCompatTextView.RadioButtonText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/radio_button_margin"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:gravity="center"
                android:button="@color/transparent"
                app:fontFamily="@font/gotham_rounded_bold" android:textColor="@color/violet"/>

        <RadioButton
                android:id="@+id/rb_choice_1"
                style="@style/androidx.appcompat.widget.AppCompatTextView.RadioButtonText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/radio_button_margin"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@color/transparent"
                android:gravity="center"
                app:fontFamily="@font/gotham_rounded_bold" android:textColor="@color/violet"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_choices_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
                android:id="@+id/rb_choice_3"
                style="@style/androidx.appcompat.widget.AppCompatTextView.RadioButtonText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/radio_button_margin"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@color/transparent"
                android:gravity="center"
                app:fontFamily="@font/gotham_rounded_bold" android:textColor="@color/violet"/>

        <RadioButton
                android:id="@+id/rb_choice_4"
                style="@style/androidx.appcompat.widget.AppCompatTextView.RadioButtonText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/radio_button_margin"
                android:layout_weight="1"
                android:background="@drawable/radio_button_selector"
                android:button="@color/transparent"
                android:gravity="center"
                app:fontFamily="@font/gotham_rounded_bold" android:textColor="@color/violet"/>
    </RadioGroup>

</LinearLayout>