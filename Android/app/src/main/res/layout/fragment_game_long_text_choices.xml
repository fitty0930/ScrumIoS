<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_choices_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_choice_2"
            style="@style/TextView.RadioButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/radio_button_margin"
            android:layout_weight="1"
            android:background="@drawable/gradient_background_2"
            android:gravity="center"
            app:fontFamily="@font/museo_sans_rounded_100" />

        <RadioButton
            android:id="@+id/rb_choice_1"
            style="@style/TextView.RadioButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/radio_button_margin"
            android:layout_weight="1"
            android:background="@drawable/gradient_background_1"
            android:gravity="center"
            app:fontFamily="@font/museo_sans_rounded_100" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_choices_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_choice_3"
            style="@style/TextView.RadioButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/radio_button_margin"
            android:layout_weight="1"
            android:background="@drawable/gradient_background_3"
            android:gravity="center"
            app:buttonTint="@color/cloud"
            app:fontFamily="@font/museo_sans_rounded_100" />

        <RadioButton
            android:id="@+id/rb_choice_4"
            style="@style/TextView.RadioButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/radio_button_margin"
            android:layout_weight="1"
            android:background="@drawable/gradient_background_4"
            android:gravity="center"
            app:fontFamily="@font/museo_sans_rounded_100" />
    </RadioGroup>

</LinearLayout>