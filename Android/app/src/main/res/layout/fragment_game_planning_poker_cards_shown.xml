<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_alignParentBottom="false"
                                                   android:layout_weight="1"
                                                   android:orientation="vertical"
                                                   android:layout_marginRight="@dimen/activity_horizontal_margin"
                                                   android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                                   android:layout_marginTop="@dimen/activity_vertical_margin"
                                                   android:layout_marginBottom="@dimen/activity_vertical_margin">

    <LinearLayout
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_height="120dp" android:background="@drawable/gradient_background_game_completed"
            android:id="@+id/user"
            app:layout_constraintBottom_toTopOf="@+id/continue_button"
            android:contentDescription="@string/user_cv"
            app:layout_constraintTop_toBottomOf="@+id/team_member_2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_estimation_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_rounded_bold"
                android:textSize="36sp" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_height="120dp" android:background="@drawable/gradient_background_game_completed"
            android:id="@+id/team_member_2"
            app:layout_constraintStart_toEndOf="@+id/team_member_1"
            android:contentDescription="@string/team_member_2_cv"
            app:layout_constraintEnd_toStartOf="@+id/team_member_3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/team_member_2_estimation_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_rounded_bold"
                android:textSize="36sp" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_height="120dp" android:background="@drawable/gradient_background_game_completed"
            android:id="@+id/team_member_3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/team_member_3_cv"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="150dp"
            app:layout_constraintStart_toEndOf="@+id/user">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/team_member_3_estimation_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_rounded_bold"
                android:textSize="36sp" android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_height="120dp" android:background="@drawable/gradient_background_game_completed"
            android:id="@+id/team_member_1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/team_member_1_cv"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="150dp"
            app:layout_constraintEnd_toStartOf="@+id/user">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/team_member_1_estimation_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_rounded_bold"
                android:textSize="36sp" android:layout_gravity="center"/>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/user_cv"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_rounded_bold"
            android:textSize="20sp" android:layout_gravity="center" app:layout_constraintBottom_toTopOf="@+id/user"
            app:layout_constraintStart_toStartOf="@+id/user" app:layout_constraintEnd_toEndOf="@+id/user"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/team_member_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/team_member_1_cv"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_rounded_bold"
            android:textSize="20sp" android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/team_member_1"
            app:layout_constraintEnd_toEndOf="@+id/team_member_1"
            app:layout_constraintStart_toStartOf="@+id/team_member_1"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/team_member_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/team_member_2_cv"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_rounded_bold"
            android:textSize="20sp" android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/team_member_2"
            app:layout_constraintStart_toStartOf="@+id/team_member_2"
            app:layout_constraintBottom_toTopOf="@+id/team_member_2"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/team_member_3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/team_member_3_cv"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_rounded_bold"
            android:textSize="20sp" android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/team_member_3"
            app:layout_constraintStart_toStartOf="@+id/team_member_3"
            app:layout_constraintBottom_toTopOf="@+id/team_member_3"/>
    <Button
            android:id="@+id/continue_button"
            style="@style/Button.SendAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_text"
            android:textAllCaps="false"
            android:visibility="visible" android:fontFamily="@font/gotham_rounded_bold"
            android:textColor="@color/white" android:background="@drawable/button_round_purple_background"
            android:paddingLeft="30dp" android:paddingTop="10dp" android:paddingRight="30dp"
            android:paddingBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>