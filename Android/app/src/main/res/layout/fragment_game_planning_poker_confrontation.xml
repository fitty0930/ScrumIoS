<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" android:fillViewport="true">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:gravity="center"
        >
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/decision_tv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/planning_poker_game_confrontation_team_member_estimation"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gotham_rounded_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
                    android:layout_gravity="center"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="150dp" android:background="@drawable/button_round_green_background"
                    android:layout_gravity="center" android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center" android:foregroundGravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/team_member_3_estimation_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gotham_rounded_bold"
                        android:textSize="36sp" android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/user_decision_tv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/planning_poker_game_confrontation_user_estimation"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gotham_rounded_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
                    android:layout_gravity="center"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="150dp" android:background="@drawable/button_round_green_background"
                    android:layout_gravity="center" android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center" android:foregroundGravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/user_estimation_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gotham_rounded_bold"
                        android:textSize="36sp" android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/decision_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/planning_poker_game_confrontation_description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/gotham_rounded_book"
                android:textSize="18sp" android:layout_gravity="center" android:layout_weight="1"/>

        <Button
                android:id="@+id/continue_button"
                style="@style/Button.SendAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continue_text"
                android:textAllCaps="false"
                android:visibility="visible" android:fontFamily="@font/gotham_rounded_bold"
                android:textColor="@color/white" android:background="@drawable/button_round_purple_background"
                android:paddingLeft="30dp" android:paddingTop="10dp" android:paddingRight="30dp"
                android:paddingBottom="10dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
    </LinearLayout>

</ScrollView>